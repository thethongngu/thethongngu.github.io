---
import "../styles/global.css";
import Header from "../components/Header";
export interface Props {
  title: string;
  activeNav?: string;
}

const { title, activeNav } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/jpeg" href="/assets/icon.jpeg" />
  </head>
  <body
    class="font-mono bg-white text-gray-800 min-h-screen text-sm leading-relaxed"
  >
    <Header activeNav={activeNav} client:load />

    <main class="max-w-4xl mx-auto px-4 py-8">
      <slot />
    </main>

    <footer
      class="text-center px-4 py-8 text-gray-600 text-sm border-t border-gray-300 mt-12"
